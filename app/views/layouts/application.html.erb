<!DOCTYPE html>
<html>
  <head>
    <title>Goodreads Rails</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all' %>
    <%= javascript_include_tag 'application' %>
  </head>

  <body>

    <% if flash.any? %>
      <div class="flash">
        <% flash.each do |name, msg| %>
          <%= content_tag :div, msg, class: "callout #{name}" %>
        <% end %>
      </div>
    <% end %>

    <% if flash.any? %>
      <div class="flash">
        <% flash.each do |name, msg| %>
          <%= content_tag :div, msg, class: "callout #{name}" %>
        <% end %>
      </div>
    <% end %>

    <%= yield %>
  </body>
</html>
