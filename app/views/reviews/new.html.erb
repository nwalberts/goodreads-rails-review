<h1>Review form for <%= @book.title %></h1>

<%= form_for [@book, @review] do |f| %>
  <%=f.label :rating, "Rating" %>
  <%=f.text_field :rating %>

  <%=f.label :body, "Review" %>
  <%=f.text_field :body %>

  <%=f.submit "Add Review" %>
<% end %>

<form class="" action="/books/:id/reviews" method="post">

</form>
